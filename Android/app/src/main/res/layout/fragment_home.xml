<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Garden Layout"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:id="@+id/relative_main">

        <LinearLayout
            android:id="@+id/container_mid_left"
            android:layout_width="200dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_marginStart="-135dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/translucent_containers">

            <LinearLayout
                android:id="@+id/toggleLeftButton"
                android:orientation="vertical"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="150dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_toggle_left" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_right_mid"
            android:layout_width="200dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_marginStart="-135dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/translucent_containers">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="150dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_toggle_left" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_overlay_name"
            android:layout_width="412dp"
            android:layout_height="732dp"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-14dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/translucent_containers"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/container_name_input"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_alignStart="@+id/homeMsg"
                android:layout_below="@+id/menuButton"
                android:layout_marginStart="60dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/translucent_containers">

                <EditText
                    android:id="@+id/textplantname"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"/>

                <Button
                    android:id="@+id/button_enter_name"
                    android:layout_below="@+id/textplantname"
                    android:layout_marginTop="30dp"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/transparent_bg_bordered_button"
                    android:text="ENTER" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_mid1"
            android:layout_width="250dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/translucent_containers">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_mid2"
            android:layout_width="250dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"

            android:background="@drawable/translucent_containers">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_mid3"
            android:layout_width="250dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/translucent_containers">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_overlay1"
            android:layout_width="440dp"
            android:layout_height="732dp"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headerleft"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                android:text="Left"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/container_big1"
                android:layout_width="334dp"
                android:layout_height="440dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:background="@drawable/translucent_loweropacity_containers"/>
            </LinearLayout>


        <LinearLayout
            android:id="@+id/container_overlay2"
            android:layout_width="440dp"
            android:layout_height="732dp"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/headermiddle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                android:text="Center"
                android:textAlignment="center"
                android:textSize="20dp" />



            <LinearLayout
                android:id="@+id/container_big2"
                android:layout_width="334dp"
                android:layout_height="440dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:background="@drawable/translucent_loweropacity_containers"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/container_overlay3"
            android:layout_width="440dp"
            android:layout_height="732dp"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/headerright"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:orientation="horizontal"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:text="Right"
            android:textAlignment="center"
            android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/container_big3"
                android:layout_width="334dp"
                android:layout_height="440dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:background="@drawable/translucent_loweropacity_containers"/>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/container_mid_right"
            android:layout_width="200dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_marginStart="345dp"
            android:layout_marginTop="70dp"

            android:background="@drawable/translucent_containers">

            <LinearLayout
                android:id="@+id/toggleRightButton"
                android:orientation="vertical"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_toggle_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_left_mid"
            android:layout_width="200dp"
            android:layout_height="375dp"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/homeMsg"
            android:layout_marginStart="345dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/translucent_containers">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_toggle_right" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/homeBottomContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/growthEnvironmentBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growing Conditions"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/growthEnvironment"
                android:layout_width="430dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/translucent_containers"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/growthRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/temperatureIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_launcher_temperature1" />

                        <TextView
                            android:id="@+id/temperatureTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:text="Temperature"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/solutionIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="-10dp"
                            android:src="@mipmap/ic_launcher_solution1" />

                        <TextView
                            android:id="@+id/solutionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-10dp"
                            android:text="Solution Level"
                            android:textSize="15dp"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/solution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Solution"
                            android:textSize="15dp"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/humidityIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="-10dp"
                            android:src="@mipmap/ic_launcher_humidity1" />

                        <TextView
                            android:id="@+id/humidityTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-10dp"
                            android:text="Humidity"
                            android:textSize="15dp"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Humidity"
                            android:textSize="15dp"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/growthRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left
"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/lightIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher_light1" />

                        <TextView
                            android:id="@+id/lightTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="-10dp"
                            android:text="Light"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:text="Light"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/waterIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="-10dp"
                            android:src="@mipmap/ic_launcher_water1" />

                        <TextView
                            android:id="@+id/waterTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="-10dp"
                            android:text="Water Level"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:text="Water"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/phIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="-10dp"
                            android:src="@mipmap/ic_launcher_ph1" />

                        <TextView
                            android:id="@+id/phTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-10dp"
                            android:textSize="15dp"
                            android:text="Concentration"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:text="ph value"
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeProfileContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/homeProfile"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/translucent_containers"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account_circle" />

                <TextView
                    android:id="@+id/homeProfileName"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="top"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>